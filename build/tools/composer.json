{
    "require": {
        "consolidation/robo": "^1.2",
        "phpmetrics/phpmetrics": "^2.3",
        "phpmd/phpmd": "^2.6",
        "pdepend/pdepend": "^2.5",
        "sebastian/phpcpd": "^4.0",
        "mwltr/robo-magento2": "^2.1",
        "phpstan/phpstan": "^0.10",
        "phpro/grumphp": "^0.14.0",
        "magento-ecg/coding-standard": ">=3.0",
        "squizlabs/php_codesniffer": "3.*",
        "sensiolabs/security-checker": "^4.1",
        "mwltr/lib-mwltr-robo-build": "^1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "grumphp": {
            "config-default-path": "../../grumphp.yml"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://gitlab.com/mwltr/dev-setup/lib-mwltr-robo-build.git"
        }
    ]
}
